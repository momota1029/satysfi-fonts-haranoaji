;; For Satyrographos 0.0.2 series
(version 0.0.2)

;; Library declaration
(library
  ;; Library name
  (name "font-haranoaji")
  ;; Library version
  (version "1.0.0")
  ;; Files
  (sources (
    (hash "fonts.satysfi-hash" "fonts.satysfi-hash")
    (fontDir "fonts")
  ))
  ;; OPAM package file
  (opam "satysfi-font-haranoaji.opam")
  ;; Dependency
  (dependencies
    ((dist ()) ; Standard library
     (base ()) ; Base library
    )))

;; Library doc declaration
(libraryDoc
  ;; Library doc name
  (name "font-haranoaji-doc")
  ;; Library version
  (version "1.0.0")
  ;; Working directory to build docs
  (workingDirectory "doc")
  ;; Build commands
  (build
    ;; Run SATySFi
    ((satysfi "manual.saty" "-o" "manual.pdf")))
  ;; Files
  (sources
    ((doc "manual.pdf" "doc/manual.pdf")))
  ;; OPAM package file
  (opam "satysfi-font-haranoaji-doc.opam")
  ;; Dependency
  (dependencies
    ((font-haranoaji ()) ; the main library
     (dist ()) ; Standard library
     (base ()) ; Base library
    )))
